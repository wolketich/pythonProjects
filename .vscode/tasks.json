{
	"version": "2.0.0",
	"inputs": [
	  {
		"id": "commitDay",
		"type": "promptString",
		"description": "Enter the commit day (DD):",
		"default": ""
	  },
	  {
		"id": "commitMonth",
		"type": "promptString",
		"description": "Enter the commit month (MM):",
		"default": ""
	  }
	],
	"tasks": [
	  {
		"type": "shell",
		"label": "Commit",
		"command": "./gd", // just the script name here
		"args": [
		  "${input:commitDay}/${input:commitMonth}/2018" // here we reference the input
		],
		"problemMatcher": [],
		"group": {
		  "kind": "build",
		  "isDefault": true  // makes it the default build task
		}
	  }
	]
  }
